<div class="container body">
  <div class="main_container">
    <div class="col-md-3 left_col">
      <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
          <a href="index.html" class="site_title"> <span>Extio</span></a>
        </div>

        <div class="clearfix"></div>

        <!-- menu profile quick info -->
        <div class="profile clearfix">
          <div class="profile_pic">
            <%= image_tag("admin_profile.png", :class=>"img-circle profile_img") %>
          </div>
          <div class="profile_info">
            <span>Welcome,</span>
            <% if current_admin %>
              <h2><%= current_admin.name %></h2>
            <% elsif current_jury_a %>
              <h2><%= current_jury_a.name %></h2>
            <% else %>
              <h2><%= current_jury_b.name %></h2>
            <% end %>
          </div>
        </div>
        <!-- /menu profile quick info -->

        <br />

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
          <div class="menu_section">
            <h3>General</h3>
            <ul class="nav side-menu">
              <li><%= link_to posts_path do %>
                <i class="fa fa-newspaper-o"></i>
                Post
              <% end %>
              </li>
              <li><%= link_to periods_path do %>
                <i class="fa fa-calendar"></i>
                  Periods
                <% end %>
              </li>
              <li><%= link_to languages_path do %>
                <i class="fa fa-language"></i>
                  Languages
                <% end %>
              </li>
              <li><%= link_to places_path do %>
                <i class="fa fa-language"></i>
                  Places
                <% end %>
              </li>
              <li><a><i class="fa fa-users"></i> Users <span class="fa fa-chevron-down"></span></a>
                <ul class="nav child_menu">
                  <li><%= link_to pre_candidates_path do %>
                    <i class="fa fa-user"></i>
                       Pre candidates
                    <% end %>
                  </li>
                  <li><%= link_to candidates_path do %>
                    <i class="fa fa-user"></i>
                       Candidates
                    <% end %>
                  </li>
                  <li><a ><i class="fa fa-user"></i> Postponed</a></li>
                </ul>
              </li>

              <li><a ><i class="fa fa-gavel"></i> Jurys</a></li>
              <li><a ><i class="fa fa-table"></i> Reports</a></li>
            </ul>
          </div>

        </div>
        <!-- /sidebar menu -->

      </div>
    </div>

    <!-- top navigation -->
    <div class="top_nav">
      <div class="nav_menu">
        <nav>
          <div class="nav toggle">
            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
          </div>

          <ul class="nav navbar-nav navbar-right">
            <li class="">
              <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <%= image_tag("admin_profile.png", size: "32") %>
                <% if current_admin %>
                  <%= current_admin.name %>
                <% elsif current_jury_a %>
                  <%= current_jury_a.name %>
                <% else  %>
                  <%= current_jury_b.name %>
                <% end %>
                <span class=" fa fa-angle-down"></span>
              </a>
              <ul class="dropdown-menu dropdown-usermenu pull-right">
                <li>
                  <% if current_admin %>
                    <%= link_to  edit_admin_registration_path(current_admin) do %>
                      Profile
                    <% end %>
                  <% elsif current_jury_a %>
                    <%= link_to edit_jury_a_registration_path(current_jury_a) do %>
                      Profile
                    <% end %>
                  <% else  %>
                    <%= link_to edit_jury_b_registration_path(current_jury_b) do %>
                      Profile
                    <% end %>
                  <% end %>

               </li>
               <% if current_admin %>
                  <li>
                    <%= link_to settings_path do %>
                      <span>Settings</span>
                    <% end %>
                  </li>
                <% end %>
                <li><a href="javascript:;">Help</a></li>
                <li><%=link_to destroy_admin_session_path, method: :delete do %>
                  <i class="fa fa-sign-out pull-right"></i>Log out
                <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <!-- /top navigation -->
    <div class="right_col" role="main">
      <% if @content %>
        <%= render @content %>
      <% end %>
    </div>
    <!-- footer content -->
    <footer>
      <div class="pull-right">
        Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
      </div>
      <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->
  </div>
</div>
