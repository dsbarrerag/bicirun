<div class="row">
  <div class="text-center">
    <div class="col-md-10" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Registro</h1>
    </div>
  </div>
  <div class="col-sm-10">
    <div><hr class="style13"></div>
    <div class="main-content">
      <div class="form-basic">
        <%= form_for(student) do |f| %>
        <% if student.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

          <ul>
            <% student.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-row">
          <label>
            <span>TIUN</span>
            <%= f.text_field :tiun %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Nombres</span>
            <%= f.text_field :first_name, disabled:true %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Apellidos</span>
            <%= f.text_field :last_name, disabled:true %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Documento</span>
            <%= f.text_field :document %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Teléfono</span>
            <%= f.text_field :phone %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Correo electrónico</span>
            <%= f.text_field :email, disabled:true %>
          </label>
        </div>

        <div class="actions">
          <%= f.submit :"Crear usuario", :class => "button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
